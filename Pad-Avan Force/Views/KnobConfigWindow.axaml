<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PadAwan_Force.Views.KnobConfigWindow"
        Title="Knob Configuration"
        Width="650" Height="600"
        CanResize="False"
        Background="Black"
        Icon="/Assets/Pad-Avan Force logo.ico"
        WindowStartupLocation="CenterOwner">
  
  <Grid Margin="40">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Top horizontal rectangle -->
    <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               Fill="#1A1A1A" 
               Height="60" 
               VerticalAlignment="Top" 
               Margin="-40,-40,-40,-100"/>
    
    <!-- Bottom horizontal rectangle -->
    <Rectangle Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
               Fill="#1A1A1A" 
               Height="60" 
               VerticalAlignment="Bottom" 
               Margin="-40,0,-40,-40"/>
    
    <!-- Title -->
    <TextBlock Grid.Row="0" 
               Text="Configuration:" 
               FontSize="32" 
               FontWeight="Bold" 
               Foreground="#00FFFF"
               HorizontalAlignment="Left" 
               Margin="-30,-35,0,30"/>

    <!-- Knob Reference -->  
    <TextBlock x:Name="KnobNumberText"
        Text="Knob A"
        FontSize="32"
        FontWeight="Bold"
        Foreground="#00FFFF"
        HorizontalAlignment="Right"
        Margin="-30,-35,0,30"/>
    
    <!-- Configuration Content -->
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!-- Central Knob Configuration -->
      <Grid Grid.Column="0" Width="600" Height="450" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="200"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="200"/>
          <ColumnDefinition Width="200"/>
          <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        
        <!-- Central Knob Circle -->
        <Border Grid.Column="1" Grid.Row="1"
                Width="140" Height="140"
                Background="#00FFFF"
                BorderBrush="#00FFFF"
                BorderThickness="4"
                CornerRadius="70"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,-20,0,-40">
          <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="KNOB" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"/>

          </StackPanel>
        </Border>
        
        <!-- Left Side - CCW Action -->
        <StackPanel Grid.Column="0" Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Margin="0,0,0,0">
          <!-- CCW Arrow Icon -->
          <TextBlock Text="↺" 
                     FontSize="28" 
                     Foreground="#00FFFF"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,8"/>
          <TextBlock Text="CCW Action:" 
                     FontSize="16" 
                     FontWeight="Bold"
                     Foreground="White" 
                     HorizontalAlignment="Center"
                     Margin="0,0,0,10"/>
          <ComboBox x:Name="CcwActionComboBox"
                    Width="160" 
                    Height="35" 
                    FontSize="14" 
                    Background="#404040" 
                    Foreground="White" 
                    BorderBrush="#707070" 
                    BorderThickness="2" 
                    CornerRadius="5">
			<ComboBoxItem Content="Increase Volume"/>
            <ComboBoxItem Content="Decrease Volume"/>
            <ComboBoxItem Content="Scroll Up"/>
            <ComboBoxItem Content="Scroll Down"/>
            <ComboBoxItem Content="None"/>
          </ComboBox>
        </StackPanel>
        
        <!-- Right Side - CW Action -->
        <StackPanel Grid.Column="2" Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Margin="0,0,0,0">
          <!-- CW Arrow Icon -->
          <TextBlock Text="↻" 
                     FontSize="28" 
                     Foreground="#00FFFF"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,8"/>
          <TextBlock Text="CW Action:" 
                     FontSize="16" 
                     FontWeight="Bold"
                     Foreground="White" 
                     HorizontalAlignment="Center"
                     Margin="0,0,0,10"/>
          <ComboBox x:Name="CwActionComboBox"
                    Width="160" 
                    Height="35" 
                    FontSize="14" 
                    Background="#404040" 
                    Foreground="White" 
                    BorderBrush="#707070" 
                    BorderThickness="2" 
                    CornerRadius="5">
			  <ComboBoxItem Content="Increase Volume"/>
			  <ComboBoxItem Content="Decrease Volume"/>
			  <ComboBoxItem Content="Scroll Up"/>
			  <ComboBoxItem Content="Scroll Down"/>
			  <ComboBoxItem Content="None"/>
          </ComboBox>
        </StackPanel>
        
        <!-- Bottom - Press Action -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top"
                    Margin="0,15,0,0">
          <!-- Press Action Dropdown - Fixed Position -->
          <StackPanel HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Press Action:" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <ComboBox x:Name="PressActionComboBox"
                      Width="160" 
                      Height="35" 
                      FontSize="14" 
                      Background="#404040" 
                      Foreground="White" 
                      BorderBrush="#707070" 
                      BorderThickness="2" 
                      CornerRadius="5"
                      HorizontalAlignment="Center"
                      SelectionChanged="PressActionComboBox_SelectionChanged">
              <ComboBoxItem Content="Type Text"/>
              <ComboBoxItem Content="Special Key"/>
              <ComboBoxItem Content="Key combo"/>
              <ComboBoxItem Content="Layer Switch"/>
              <ComboBoxItem Content="None"/>
            </ComboBox>
          </StackPanel>
          
          <!-- Press Config Panels -->
          <StackPanel x:Name="PressKeyValuePanel" HorizontalAlignment="Center" IsVisible="False" Margin="0,10,0,0">
            <TextBlock Text="Text:" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="PressKeyValueTextBox" Width="160" Height="30" FontSize="12" 
                     Background="#404040" Foreground="White" BorderBrush="#707070" 
                     BorderThickness="2" CornerRadius="5" Watermark="Enter text..."/>
          </StackPanel>
          
          <StackPanel x:Name="PressSpecialKeyPanel" HorizontalAlignment="Center" IsVisible="False" Margin="0,10,0,0">
            <TextBlock Text="Special Key:" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
            <ComboBox x:Name="PressSpecialKeyComboBox" Width="160" Height="30" FontSize="12"
                      Background="#404040" Foreground="White" BorderBrush="#707070" 
                      BorderThickness="2" CornerRadius="5" SelectedIndex="0">
              <ComboBoxItem Content="Esc"/>
              <ComboBoxItem Content="Enter"/>
              <ComboBoxItem Content="Tab"/>
              <ComboBoxItem Content="Space"/>
              <ComboBoxItem Content="Backspace"/>
              <ComboBoxItem Content="Delete"/>
              <ComboBoxItem Content="Home"/>
              <ComboBoxItem Content="End"/>
              <ComboBoxItem Content="Page Up"/>
              <ComboBoxItem Content="Page Down"/>
              <ComboBoxItem Content="Arrow Up"/>
              <ComboBoxItem Content="Arrow Down"/>
              <ComboBoxItem Content="Arrow Left"/>
              <ComboBoxItem Content="Arrow Right"/>
              <ComboBoxItem Content="F1"/>
              <ComboBoxItem Content="F2"/>
              <ComboBoxItem Content="F3"/>
              <ComboBoxItem Content="F4"/>
              <ComboBoxItem Content="F5"/>
              <ComboBoxItem Content="F6"/>
              <ComboBoxItem Content="F7"/>
              <ComboBoxItem Content="F8"/>
              <ComboBoxItem Content="F9"/>
              <ComboBoxItem Content="F10"/>
              <ComboBoxItem Content="F11"/>
              <ComboBoxItem Content="F12"/>
              <ComboBoxItem Content="Windows Key"/>
              <ComboBoxItem Content="Menu Key"/>
              <ComboBoxItem Content="Ctrl"/>
              <ComboBoxItem Content="Shift"/>
              <ComboBoxItem Content="Alt"/>
              <ComboBoxItem Content="Alt Gr"/>
              <ComboBoxItem Content="Play/Pause"/>
              <ComboBoxItem Content="Next Track"/>
              <ComboBoxItem Content="Previous Track"/>
              <ComboBoxItem Content="Stop"/>
              <ComboBoxItem Content="Volume Up"/>
              <ComboBoxItem Content="Volume Down"/>
              <ComboBoxItem Content="Mute"/>
            </ComboBox>
          </StackPanel>
          
          <StackPanel x:Name="PressKeyComboPanel" HorizontalAlignment="Center" IsVisible="False" Margin="0,10,0,0">
            <TextBlock Text="Key Combination:" FontSize="14" FontWeight="Bold" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <ScrollViewer Height="40" 
                         VerticalScrollBarVisibility="Disabled" 
                         HorizontalScrollBarVisibility="Auto"
                         HorizontalAlignment="Center"
                         MaxWidth="400">
              <StackPanel x:Name="PressKeyComboContainer" Orientation="Horizontal" Spacing="5" HorizontalAlignment="Center">
                <Border BorderBrush="#707070" BorderThickness="2" CornerRadius="5" Background="#404040">
                  <ComboBox x:Name="PressFirstKeyComboBox" Width="120" Height="25" 
                            FontSize="12" Background="#404040" Foreground="White" 
                            BorderBrush="Transparent" BorderThickness="0">
                    <ComboBoxItem Content="Ctrl"/>
                    <ComboBoxItem Content="Alt"/>
                    <ComboBoxItem Content="Shift"/>
                    <ComboBoxItem Content="Win"/>
                    <ComboBoxItem Content="A"/>
                    <ComboBoxItem Content="B"/>
                    <ComboBoxItem Content="C"/>
                    <ComboBoxItem Content="D"/>
                    <ComboBoxItem Content="E"/>
                    <ComboBoxItem Content="F"/>
                    <ComboBoxItem Content="G"/>
                    <ComboBoxItem Content="H"/>
                    <ComboBoxItem Content="I"/>
                    <ComboBoxItem Content="J"/>
                    <ComboBoxItem Content="K"/>
                    <ComboBoxItem Content="L"/>
                    <ComboBoxItem Content="M"/>
                    <ComboBoxItem Content="N"/>
                    <ComboBoxItem Content="O"/>
                    <ComboBoxItem Content="P"/>
                    <ComboBoxItem Content="Q"/>
                    <ComboBoxItem Content="R"/>
                    <ComboBoxItem Content="S"/>
                    <ComboBoxItem Content="T"/>
                    <ComboBoxItem Content="U"/>
                    <ComboBoxItem Content="V"/>
                    <ComboBoxItem Content="W"/>
                    <ComboBoxItem Content="X"/>
                    <ComboBoxItem Content="Y"/>
                    <ComboBoxItem Content="Z"/>
                    <ComboBoxItem Content="Space"/>
                    <ComboBoxItem Content="Enter"/>
                    <ComboBoxItem Content="Tab"/>
                    <ComboBoxItem Content="Esc"/>
                    <ComboBoxItem Content="Backspace"/>
                    <ComboBoxItem Content="Delete"/>
                    <ComboBoxItem Content="Home"/>
                    <ComboBoxItem Content="End"/>
                    <ComboBoxItem Content="Page Up"/>
                    <ComboBoxItem Content="Page Down"/>
                    <ComboBoxItem Content="Arrow Up"/>
                    <ComboBoxItem Content="Arrow Down"/>
                    <ComboBoxItem Content="Arrow Left"/>
                    <ComboBoxItem Content="Arrow Right"/>
                    <ComboBoxItem Content="F1"/>
                    <ComboBoxItem Content="F2"/>
                    <ComboBoxItem Content="F3"/>
                    <ComboBoxItem Content="F4"/>
                    <ComboBoxItem Content="F5"/>
                    <ComboBoxItem Content="F6"/>
                    <ComboBoxItem Content="F7"/>
                    <ComboBoxItem Content="F8"/>
                    <ComboBoxItem Content="F9"/>
                    <ComboBoxItem Content="F10"/>
                    <ComboBoxItem Content="F11"/>
                    <ComboBoxItem Content="F12"/>
                  </ComboBox>
                </Border>
              </StackPanel>
            </ScrollViewer>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0" Spacing="10">
              <Button x:Name="PressAddKeyButton" Content="+" Width="35" Height="25" 
                      FontSize="14" FontWeight="Bold"
                      Background="#00FFFF" Foreground="Black" 
                      BorderBrush="#00FFFF" BorderThickness="2" 
                      CornerRadius="5" Click="PressAddKeyButton_Click"/>
              <Button x:Name="PressRemoveKeyButton" Content="-" Width="35" Height="25" 
                      FontSize="14" FontWeight="Bold"
                      Background="#FF4444" Foreground="White" 
                      BorderBrush="#FF4444" BorderThickness="2" 
                      CornerRadius="5" Click="PressRemoveKeyButton_Click"
                      IsEnabled="False"/>
            </StackPanel>
          </StackPanel>
        </StackPanel>
        
      </Grid>
      
    </Grid>
	  
    
    <!-- Bottom Buttons -->
    <StackPanel Grid.Row="2" 
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Spacing="20"
                Margin="0,-60,0,10">
      
      <Button Content="Save" 
              Width="100" 
              Height="40" 
              FontSize="16" 
              FontWeight="Bold" 
              Background="#404040" 
              Foreground="White" 
              BorderBrush="#707070" 
              BorderThickness="2" 
              CornerRadius="5"
              Click="SaveButton_Click"/>
      
      <Button Content="Cancel" 
              Width="100" 
              Height="40" 
              FontSize="16" 
              FontWeight="Bold" 
              Background="#404040" 
              Foreground="White" 
              BorderBrush="#707070" 
              BorderThickness="2" 
              CornerRadius="5"
              Click="CancelButton_Click"/>
      
    </StackPanel>
    
  </Grid>
</Window>